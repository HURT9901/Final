@using Microsoft.AspNetCore.Components.Authorization

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">PaginaCursos.WEB</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <AuthorizeView Roles="Admin">
            <Authorized>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="estudiantes">
                        <i class="bi bi-globe-americas"></i>
                        Estudiantes
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="profesores">
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Profesor
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="cursos">
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Cursos
            </NavLink>
        </div>
        
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="grupos">
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Grupos
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="actividades">
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Actividades
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="inscripciones">
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Inscripciones
            </NavLink>
        </div>
 
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="materiales">
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Materiales
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="sugerencias">
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Sugerencias
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="integrantes">
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Integrantes
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private bool IconMenuActive { get; set; } = false;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
